@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer verRecurso;


   @model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        @verRecurso["String1"]
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success">@verRecurso["String2"]<i class="bi bi-plus-circle"></i></a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@verRecurso["String3"]</th>
                    <th>@verRecurso["String4"]</th>
                    <th>@verRecurso["String5"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-IdContacto="@item.IdContacto">@verRecurso["String6"]<i class="bi bi-pen"></i></a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-IdContacto="@item.IdContacto">@verRecurso["String7"]<i class="bi bi-trash3"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

 